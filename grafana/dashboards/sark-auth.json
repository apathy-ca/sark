{
  "dashboard": {
    "title": "SARK - Authentication & Authorization",
    "tags": ["sark", "auth", "authorization"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Attempts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(sark_auth_attempts_total[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Attempts/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": true
      },
      {
        "id": 2,
        "title": "Authentication Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(sark_auth_attempts_total{status=\"success\"}[5m])) / sum(rate(sark_auth_attempts_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "title": "Failed Login Attempts",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(sark_auth_attempts_total{status=\"failed\"}[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Authorization Decisions",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_allows_total[5m])) by (action)",
            "legendFormat": "Allow: {{action}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(sark_policy_denials_total[5m])) by (action)",
            "legendFormat": "Deny: {{action}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Decisions/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 5,
        "title": "Authorization Denial Rate by Action",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_denials_total[5m])) by (action) / (sum(rate(sark_policy_allows_total[5m])) by (action) + sum(rate(sark_policy_denials_total[5m])) by (action)) * 100",
            "legendFormat": "{{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Denial %"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 6,
        "title": "Top Denial Reasons",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "topk(10, sum(rate(sark_policy_denials_total[5m])) by (denial_reason))",
            "refId": "A",
            "format": "time_series"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 7,
        "title": "MFA Verification Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(sark_mfa_requirement_checks_total{mfa_verified=\"true\"}[5m])) / sum(rate(sark_mfa_requirement_checks_total[5m])) * 100",
            "legendFormat": "MFA Verified %",
            "refId": "A"
          },
          {
            "expr": "sum(rate(sark_mfa_requirement_checks_total{result=\"deny\"}[5m]))",
            "legendFormat": "MFA Denials/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Rate"},
          {"format": "reqps", "label": "Denials/sec"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "seriesOverrides": [
          {"alias": "MFA Denials/sec", "yaxis": 2}
        ]
      },
      {
        "id": 8,
        "title": "IP Filtering Activity",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(sark_ip_filtering_checks_total[5m])) by (result)",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Checks/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": true
      },
      {
        "id": 9,
        "title": "Time-Based Access Restrictions",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(sark_time_based_restrictions_total[5m])) by (result, is_business_hours)",
            "legendFormat": "{{result}} (business_hours={{is_business_hours}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Checks/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 10,
        "title": "Policy Violations by Type",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_violations_total[5m])) by (violation_type)",
            "refId": "A",
            "format": "time_series"
          }
        ],
        "options": {
          "pieType": "donut",
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 11,
        "title": "Top Users by Auth Attempts",
        "type": "table",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
        "targets": [
          {
            "expr": "topk(10, sum(rate(sark_auth_attempts_total[5m])) by (user_id))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "user_id": "User ID",
                "Value": "Attempts/sec"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "Recent Failed Authentications",
        "type": "table",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 32},
        "targets": [
          {
            "expr": "topk(20, sark_auth_attempts_total{status=\"failed\"})",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "user_id": "User",
                "reason": "Failure Reason",
                "Value": "Count"
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {"text": "Prometheus", "value": "Prometheus"}
        },
        {
          "name": "user",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(sark_auth_attempts_total, user_id)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
