{
  "dashboard": {
    "title": "SARK - Policy Evaluation",
    "tags": ["sark", "policies", "opa"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Policy Evaluation Latency (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(sark_policy_evaluation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_policy_evaluation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(sark_policy_evaluation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "thresholds": [
          {"value": 50, "colorMode": "critical", "op": "gt", "fill": true, "line": true, "yaxis": "left"}
        ],
        "alert": {
          "name": "High Policy Evaluation Latency",
          "conditions": [
            {
              "evaluator": {"params": [60], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["B", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "P95 policy evaluation latency above 60ms",
          "noDataState": "no_data"
        }
      },
      {
        "id": 2,
        "title": "Cache Performance Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(sark_policy_cache_hits_total[5m])) + sum(rate(sark_policy_cache_stale_hits_total[5m]))) / (sum(rate(sark_policy_cache_hits_total[5m])) + sum(rate(sark_policy_cache_stale_hits_total[5m])) + sum(rate(sark_policy_cache_misses_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 60, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        }
      },
      {
        "id": 3,
        "title": "Policy Evaluations/sec",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_evaluations_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate by Sensitivity Level",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_cache_hits_total[5m])) by (sensitivity_level) / (sum(rate(sark_policy_cache_hits_total[5m])) by (sensitivity_level) + sum(rate(sark_policy_cache_misses_total[5m])) by (sensitivity_level)) * 100",
            "legendFormat": "{{sensitivity_level}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Hit Rate %", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 5,
        "title": "Cache Operations (Hits, Stale, Misses)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_cache_hits_total[5m]))",
            "legendFormat": "Fresh Hits",
            "refId": "A"
          },
          {
            "expr": "sum(rate(sark_policy_cache_stale_hits_total[5m]))",
            "legendFormat": "Stale Hits",
            "refId": "B"
          },
          {
            "expr": "sum(rate(sark_policy_cache_misses_total[5m]))",
            "legendFormat": "Misses",
            "refId": "C"
          },
          {
            "expr": "sum(rate(sark_policy_cache_revalidations_total{status=\"success\"}[5m]))",
            "legendFormat": "Revalidations",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Operations/sec"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": true
      },
      {
        "id": 6,
        "title": "Cache Latency Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_cache_latency_seconds_bucket{operation=\"get\"}[5m])) by (le)",
            "refId": "A",
            "format": "heatmap"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2,
          "color": {
            "mode": "spectrum",
            "scheme": "Spectral"
          },
          "yAxis": {
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "OPA Request Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_opa_request_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P95 OPA Latency",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "OPA Latency"},
          {"format": "short"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 8,
        "title": "Batch Policy Evaluations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(sark_batch_policy_evaluations_total[5m]))",
            "legendFormat": "Batch Operations/sec",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_batch_evaluation_size_bucket[5m])) by (le))",
            "legendFormat": "P95 Batch Size",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Operations/sec"},
          {"format": "short", "label": "Batch Size"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "seriesOverrides": [
          {"alias": "P95 Batch Size", "yaxis": 2}
        ]
      },
      {
        "id": 9,
        "title": "Batch Evaluation Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_batch_evaluation_duration_seconds_bucket[5m])) by (le)) * 1000",
            "legendFormat": "P95 Batch Duration",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_policy_cache_batch_hit_rate_bucket[5m])) by (le))",
            "legendFormat": "P95 Batch Hit Rate %",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Duration"},
          {"format": "percent", "label": "Hit Rate %"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "seriesOverrides": [
          {"alias": "P95 Batch Hit Rate %", "yaxis": 2}
        ]
      },
      {
        "id": 10,
        "title": "Policy Evaluation by Sensitivity",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_evaluations_total[5m])) by (sensitivity_level)",
            "refId": "A",
            "format": "time_series"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 11,
        "title": "Policy Evaluation by Action",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_evaluations_total[5m])) by (action)",
            "refId": "A",
            "format": "time_series"
          }
        ],
        "options": {
          "pieType": "pie",
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 12,
        "title": "Cache Revalidation Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_cache_revalidations_total{status=\"success\"}[5m])) / sum(rate(sark_policy_cache_revalidations_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 13,
        "title": "Policy Errors",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 20, "y": 32},
        "targets": [
          {
            "expr": "sum(rate(sark_policy_evaluation_errors_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 14,
        "title": "Cache Memory Usage",
        "type": "graph",
        "gridPos": {"h": 4, "w": 12, "x": 16, "y": 36},
        "targets": [
          {
            "expr": "sark_policy_cache_entries",
            "legendFormat": "Cache Entries",
            "refId": "A"
          },
          {
            "expr": "sark_policy_cache_size_bytes / 1024 / 1024",
            "legendFormat": "Cache Size (MB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Entries"},
          {"format": "decmbytes", "label": "Size"}
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "seriesOverrides": [
          {"alias": "Cache Size (MB)", "yaxis": 2}
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {"text": "Prometheus", "value": "Prometheus"}
        },
        {
          "name": "sensitivity",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(sark_policy_evaluations_total, sensitivity_level)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
