# SARK Configuration Example
# Copy this file to .env and customize for your environment

# Application
APP_NAME=SARK
APP_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
SECRET_KEY=change-this-to-a-random-secret-key-min-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=15
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_PREFIX=/api/v1

# Logging (set JSON_LOGS=true for cloud environments)
JSON_LOGS=false

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=sark
POSTGRES_PASSWORD=sark_password
POSTGRES_DB=sark
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# TimescaleDB (Audit Database)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=sark
TIMESCALE_PASSWORD=sark_password
TIMESCALE_DB=sark_audit

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=50

# Consul
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_SCHEME=http
CONSUL_TOKEN=

# Open Policy Agent
OPA_URL=http://localhost:8181
OPA_POLICY_PATH=/v1/data/mcp/allow
OPA_TIMEOUT_SECONDS=1.0

# HashiCorp Vault
VAULT_URL=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_NAMESPACE=
VAULT_MOUNT_POINT=secret

# Kafka (optional)
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUDIT_TOPIC=sark-audit-events
KAFKA_CONSUMER_GROUP=sark-audit-consumers

# Discovery Service
DISCOVERY_INTERVAL_SECONDS=300
DISCOVERY_NETWORK_SCAN_ENABLED=false
DISCOVERY_K8S_ENABLED=false
DISCOVERY_CLOUD_ENABLED=false

# Audit Configuration
AUDIT_BATCH_SIZE=100
AUDIT_FLUSH_INTERVAL_SECONDS=5
AUDIT_RETENTION_DAYS=90

# Observability
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=
