# SARK v1.1.0 - Gateway Integration Example Configuration
# Copy this file to .env and update the values

# =============================================================================
# Gateway Integration (v1.1.0 Feature)
# =============================================================================

# Enable Gateway integration (set to false to disable - v1.0.0 behavior)
GATEWAY_ENABLED=true

# MCP Gateway URL
GATEWAY_URL=http://mcp-gateway:8080

# Gateway API Key (used by SARK to authenticate to Gateway)
# Generate with: openssl rand -hex 32
GATEWAY_API_KEY=change_me_in_production

# SARK API Key (used by Gateway to authenticate to SARK)
# Generate with: docker exec -it sark python -m sark.cli.generate_api_key --type gateway
SARK_API_KEY=change_me_in_production

# Gateway Timeout (seconds)
GATEWAY_TIMEOUT_SECONDS=30

# Gateway Retry Attempts
GATEWAY_RETRY_ATTEMPTS=3

# =============================================================================
# Agent-to-Agent (A2A) Authorization (Optional)
# =============================================================================

# Enable A2A authorization (requires GATEWAY_ENABLED=true)
A2A_ENABLED=false

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL password
POSTGRES_PASSWORD=sark_password_change_me

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis password
REDIS_PASSWORD=redis_password_change_me

# =============================================================================
# Security
# =============================================================================

# JWT Secret Key (CRITICAL: Change in production)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change_me_in_production

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Monitoring (Optional)
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# =============================================================================
# External Services (Optional)
# =============================================================================

# GitHub token for GitHub MCP server (optional)
GITHUB_TOKEN=
