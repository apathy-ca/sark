{
  "dashboard": {
    "title": "SARK Gateway Performance",
    "tags": ["sark", "gateway", "performance", "latency"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Latency Heatmap",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_gateway_request_duration_seconds_bucket[5m])) by (le)",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "calculation": {},
          "cellGap": 2,
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "scheme",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Spectral",
            "steps": 128
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": true
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "s"
          }
        }
      },
      {
        "id": 2,
        "title": "Tool Execution Time Breakdown",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_gateway_tool_execution_duration_seconds_bucket[5m])) by (le, tool))",
            "legendFormat": "{{tool}} (P95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(sark_gateway_tool_execution_duration_seconds_bucket[5m])) by (le, tool))",
            "legendFormat": "{{tool}} (P50)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Policy Evaluation Overhead",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_policy_evaluation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(sark_policy_evaluation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "B"
          },
          {
            "expr": "avg(rate(sark_policy_evaluation_duration_seconds_sum[5m]) / rate(sark_policy_evaluation_duration_seconds_count[5m]))",
            "legendFormat": "Average",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cache Performance",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "rate(sark_gateway_cache_operations_total{result=\"hit\"}[5m])",
            "legendFormat": "Cache Hits/s",
            "refId": "A"
          },
          {
            "expr": "rate(sark_gateway_cache_operations_total{result=\"miss\"}[5m])",
            "legendFormat": "Cache Misses/s",
            "refId": "B"
          },
          {
            "expr": "rate(sark_policy_cache_hits_total[5m])",
            "legendFormat": "Policy Cache Hits/s",
            "refId": "C"
          },
          {
            "expr": "rate(sark_policy_cache_misses_total[5m])",
            "legendFormat": "Policy Cache Misses/s",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "lastNotNull"]
          }
        }
      },
      {
        "id": 5,
        "title": "Cache Hit Rate %",
        "type": "stat",
        "gridPos": {"x": 8, "y": 16, "w": 4, "h": 6},
        "targets": [
          {
            "expr": "100 * rate(sark_gateway_cache_operations_total{result=\"hit\"}[5m]) / (rate(sark_gateway_cache_operations_total{result=\"hit\"}[5m]) + rate(sark_gateway_cache_operations_total{result=\"miss\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 6,
        "title": "Resource Usage - Memory",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"sark-gateway\"}",
            "legendFormat": "RSS Memory",
            "refId": "A"
          },
          {
            "expr": "process_virtual_memory_bytes{job=\"sark-gateway\"}",
            "legendFormat": "Virtual Memory",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Resource Usage - CPU",
        "type": "timeseries",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"sark-gateway\"}[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Slow Requests (>1s)",
        "type": "table",
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "topk(10, sark_gateway_request_duration_seconds_bucket{le=\"+Inf\"} - ignoring(le) sark_gateway_request_duration_seconds_bucket{le=\"1.0\"})",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "endpoint": "Endpoint",
                "method": "Method",
                "Value": "Slow Request Count"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Request Duration Percentiles",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(sark_gateway_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(sark_gateway_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_gateway_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(sark_gateway_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "D"
          },
          {
            "expr": "histogram_quantile(1.00, sum(rate(sark_gateway_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "Max",
            "refId": "E"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 10,
        "title": "Requests In Flight",
        "type": "stat",
        "gridPos": {"x": 0, "y": 28, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sark_gateway_requests_in_flight",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "options": {
          "colorMode": "value"
        }
      },
      {
        "id": 11,
        "title": "Average Request Duration",
        "type": "stat",
        "gridPos": {"x": 6, "y": 28, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "avg(rate(sark_gateway_request_duration_seconds_sum[5m]) / rate(sark_gateway_request_duration_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        },
        {
          "name": "tool",
          "type": "query",
          "query": "label_values(sark_gateway_tool_invocations_total, tool)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    }
  }
}
