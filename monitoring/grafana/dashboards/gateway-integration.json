{
  "dashboard": {
    "title": "SARK Gateway Integration",
    "tags": ["sark", "gateway", "mcp", "authorization"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Authorization Requests (Rate)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_gateway_authz_requests_total[5m])) by (decision)",
            "legendFormat": "{{decision}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "allow"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "deny"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Authorization Latency (P50, P95, P99)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(sark_gateway_authz_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(sark_gateway_authz_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(sark_gateway_authz_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Allow/Deny Ratio",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_gateway_authz_requests_total[5m])) by (decision)",
            "legendFormat": "{{decision}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "allow"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "deny"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(sark_gateway_cache_hits_total[5m]) / (rate(sark_gateway_cache_hits_total[5m]) + rate(sark_gateway_cache_misses_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "A2A Authorization Requests",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_a2a_authz_requests_total[5m])) by (decision)",
            "legendFormat": "{{decision}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Error Rate by Operation",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_gateway_client_errors_total[5m])) by (operation, error_type)",
            "legendFormat": "{{operation}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "title": "Top Denied Users (Last Hour)",
        "type": "table",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "topk(10, count by (user_id) (gateway_audit_events{decision=\"deny\"}))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "user_id": "User ID",
                "Value": "Deny Count"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Top Invoked Tools",
        "type": "table",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (tool_name, server_name) (rate(sark_gateway_authz_requests_total{tool_name!=\"\"}[1h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "tool_name": "Tool",
                "server_name": "Server",
                "Value": "Requests/sec"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Gateway Connections",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "sark_gateway_active_connections",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Audit Events Logged (Total)",
        "type": "stat",
        "gridPos": {"x": 4, "y": 24, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "sum(sark_gateway_audit_events_total)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 11,
        "title": "Authorization Requests by Server",
        "type": "timeseries",
        "gridPos": {"x": 8, "y": 24, "w": 16, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(sark_gateway_authz_requests_total[5m])) by (server)",
            "legendFormat": "{{server}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "stacking": {"mode": "normal"}
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        },
        {
          "name": "server",
          "type": "query",
          "query": "label_values(sark_gateway_authz_requests_total, server)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        },
        {
          "name": "action",
          "type": "query",
          "query": "label_values(sark_gateway_authz_requests_total, action)",
          "multi": true,
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"Gateway.*\"}",
          "name": "Gateway Alerts",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "titleFormat": "Alert: {{alertname}}",
          "textFormat": "{{severity}}: {{description}}"
        }
      ]
    }
  }
}
