# =============================================================================
# SARK Production-Ready Dockerfile
# =============================================================================
# Multi-stage build with security best practices:
# - Non-root user execution
# - Minimal attack surface (slim base image)
# - No secrets in layers
# - Dependency scanning friendly
# - Optimized layer caching
# =============================================================================

# Stage 1: Builder - Build dependencies and application
# =============================================================================
FROM python:3.11-slim as builder

# Security: Run as non-root during build
RUN groupadd -r appgroup && useradd -r -g appgroup builder

# Set environment variables for build
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_DEFAULT_TIMEOUT=100

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /build

# Copy only requirements first for better layer caching
COPY --chown=builder:appgroup pyproject.toml README.md ./

# Install dependencies to a target directory
RUN pip install --prefix=/install --no-warn-script-location .

# Stage 2: Runtime - Minimal production image
# =============================================================================
FROM python:3.11-slim as runtime

# Metadata labels following OCI standards
LABEL org.opencontainers.image.title="SARK" \
      org.opencontainers.image.description="Secure Anthropic Runtime for Kubernetes" \
      org.opencontainers.image.vendor="SARK Team" \
      org.opencontainers.image.licenses="MIT" \
      org.opencontainers.image.source="https://github.com/apathy-ca/sark"

# Security: Create non-root user with specific UID/GID
RUN groupadd -r -g 1000 appgroup && \
    useradd -r -u 1000 -g appgroup -m -d /app appuser && \
    mkdir -p /app/logs /app/data && \
    chown -R appuser:appgroup /app

# Install only runtime dependencies (no build tools)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app/src \
    PATH="/app/.local/bin:$PATH" \
    # Security: Disable pip root warnings
    PIP_ROOT_USER_ACTION=ignore

# Copy Python dependencies from builder
COPY --from=builder --chown=appuser:appgroup /install /usr/local

# Copy application code
WORKDIR /app
COPY --chown=appuser:appgroup src ./src
COPY --chown=appuser:appgroup pyproject.toml README.md ./

# Security: Switch to non-root user
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose application port
EXPOSE 8000

# Default command - can be overridden
CMD ["python", "-m", "uvicorn", "sark.main:app", "--host", "0.0.0.0", "--port", "8000"]

# =============================================================================
# Development Stage (for local development)
# =============================================================================
FROM python:3.11-slim as development

# Install development dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    git \
    curl \
    ca-certificates \
    make \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app/src \
    ENVIRONMENT=development

# Set working directory
WORKDIR /app

# Copy requirements
COPY pyproject.toml README.md ./

# Install application with dev dependencies in editable mode
RUN pip install --upgrade pip && \
    pip install -e .[dev]

# Copy application code (will be overridden by volume mount in dev)
COPY . .

# Default development command
CMD ["python", "-m", "pytest", "--cov", "--cov-report=html"]

# =============================================================================
# Production Stage with TimescaleDB Support
# =============================================================================
FROM runtime as production-timescale

USER root

# Install TimescaleDB client libraries
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

USER appuser

# =============================================================================
# Migration Runner Stage
# =============================================================================
FROM runtime as migrations

# Install Alembic and migration dependencies
USER root
RUN pip install alembic asyncpg psycopg2-binary
USER appuser

# Copy migration files
COPY --chown=appuser:appgroup alembic ./alembic
COPY --chown=appuser:appgroup alembic.ini ./

# Override default command
CMD ["alembic", "upgrade", "head"]
